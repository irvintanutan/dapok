<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    tools:context=".activities.profile.AccountActivity">



    <LinearLayout
        android:layout_marginTop="@dimen/_30sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

          <TextView
        android:textColor="@color/white"
        android:text="Account"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="@dimen/_20sdp"
        android:textSize="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

          <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        app:contentPadding="@dimen/_30sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="-20dp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_5sdp">

                <LinearLayout
        android:padding="@dimen/_20sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:gravity="left"
            android:text="First Name"
            android:layout_width="match_parent"
            android:textColor="@color/primaryColor"
            android:fontFamily="@font/francois_one"
            android:textSize="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_height="wrap_content"/>

        <EditText
            style="@style/EditTextStyleWhite"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:hint="Nadine"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/round_button_grey"
            android:padding="@dimen/_10sdp" />

        <TextView
            android:gravity="left"
            android:text="Last Name"
            android:layout_width="match_parent"
            android:textColor="@color/primaryColor"
            android:fontFamily="@font/francois_one"
            android:textSize="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_height="wrap_content"/>

        <EditText
            style="@style/EditTextStyleWhite"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:hint="Lustre"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/round_button_grey"
            android:padding="@dimen/_10sdp" />

        <TextView
            android:gravity="left"
            android:text="Username"
            android:layout_width="match_parent"
            android:textColor="@color/primaryColor"
            android:fontFamily="@font/francois_one"
            android:textSize="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:hint="#nadine"
            android:layout_height="wrap_content"/>

        <EditText
            style="@style/EditTextStyleWhite"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:hint="At least 8 characters"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/round_button_grey"
            android:padding="@dimen/_10sdp" />
        <TextView
            android:gravity="left"
            android:text="Email"
            android:layout_width="match_parent"
            android:textColor="@color/primaryColor"
            android:fontFamily="@font/francois_one"
            android:textSize="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:hint="NLustre@gmail.com"
            android:layout_height="wrap_content"/>

        <EditText
            style="@style/EditTextStyleWhite"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:hint="At least 8 characters"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/round_button_grey"
            android:padding="@dimen/_10sdp" />

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <Button
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_1sdp"
                    android:background="@drawable/round_button"
                    android:text="Save"
                    android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    </androidx.cardview.widget.CardView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>